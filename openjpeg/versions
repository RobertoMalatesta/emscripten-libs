  "build"              : [ "rm -fr build",
                           "mkdir build",
                           "cd build && emcmake cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX:PATH=${EMSCRIPTEN_SYSTEM_ROOT} -DBUILD_SHARED_LIBS:bool=off -DHAVE_OPJ_BIG_ENDIAN=0 -DPKG_CONFIG_EXECUTABLE=${EMSCRIPTEN_ROOT}/empkg-config -G Ninja .. && ninja install",
                           "mkdir -p ${EMSCRIPTEN_SYSTEM_ROOT}/lib/pkgconfig",
                           "echo \"prefix=${EMSCRIPTEN_SYSTEM_ROOT}\nexec_prefix=\\${prefix}\nlibdir=\\${exec_prefix}/lib\nsharedlibdir=\\${libdir}\nincludedir=\\${prefix}/include\nName: openjp\nDescription:\nVersion: 2.0.0\nLibs: -L\\${libdir} -L\\${sharedlibdir} -lopenjp2\nCflags: -I\\${includedir}\" > ${EMSCRIPTEN_SYSTEM_ROOT}/lib/pkgconfig/openjp.pc"
  ],
  "ignore_archive_root": true,
  "versions"           : [ { "version": "2.0.0",
                             "src"    : "https://openjpeg.googlecode.com/files/openjpeg-2.0.0.tar.gz"
