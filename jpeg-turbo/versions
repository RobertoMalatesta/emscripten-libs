                             "src"    : "https://github.com/abergmeier/emscripten-libjpeg-turbo/archive/emscripten_1.3.0.zip",
                             "build"  : [ "chmod u+x ./configure",
                                          "PKG_CONFIG=empkg-config emconfigure ./configure --host=i386-pc-linux-gnu --prefix=${EMSCRIPTEN_SYSTEM_ROOT} --enable-static=yes --disable-shared --without-simd",
                                          "emmake make",
                                          "emmake make install",
                                          "mkdir -p ${EMSCRIPTEN_SYSTEM_ROOT}/lib/pkgconfig",
                                          "echo \"prefix=${EMSCRIPTEN_SYSTEM_ROOT}\nexec_prefix=\\${prefix}\nlibdir=\\${exec_prefix}/lib\nsharedlibdir=\\${libdir}\nincludedir=\\${prefix}/include\nName: jpeg-turbo\nDescription:\nVersion: 1.3.0\nLibs: -L\\${libdir} -L\\${sharedlibdir} -ljpeg\nCflags: -I\\${includedir}\" > ${EMSCRIPTEN_SYSTEM_ROOT}/lib/pkgconfig/jpeg-turbo.pc"
                             ]
                           }
  ]
